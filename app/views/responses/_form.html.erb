<%= form_for :response, url: bbs_thread_responses_path(thread.id) do |f| %>
  <div class="field">
    <%= f.label t('name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('address') %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label t('body') %><br>
    <%= f.text_field :body %>
  </div>
  <div class="field">
    <%= f.label t('password') %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t('response.create') %>
  </div>
<% end %>
