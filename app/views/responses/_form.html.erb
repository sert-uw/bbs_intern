<%= form_for :response, url: bbs_thread_responses_path(@bbs_thread.id) do |f| %>
  <% if @response.present? %>
    <% if @response.errors.any? %>
      <div id="error_explanation">
        <h2><%= t('errors.template.header.other', count: @response.errors.count) %></h2>

        <ul>
        <% @response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label t('name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('address') %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label t('body') %><br>
    <%= f.text_field :body %>
  </div>
  <div class="field">
    <%= f.label t('password') %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t('response.create') %>
  </div>
<% end %>
